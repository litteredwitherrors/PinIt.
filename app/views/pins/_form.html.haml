= simple_form_for @pin, html: { multipart: true } do |pin|
  - if @pin.errors.any?
    #errors
      %h2
      = pluralize(@pin.errors.count, "error")
      prevented this Pin from saving
      %ul
        - @pin.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = pin.input :image, input_html: { class: 'form-control' }
  .form-group
    = pin.input :title, input_html: { class: 'form-control' }
  .form-group
    = pin.input :description, input_html: { class: 'form-control' }
  = pin.button :submit, class: "btn btn-primary"